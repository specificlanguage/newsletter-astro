---
import '../styles/global.css';

export interface Props {
    color: string;
    darkColor: string;
}

const { color, darkColor } = Astro.props;
const coloredStyle = "rounded-3xl my-4 px-4 py-1 text-neutral-800 dark:text-neutral-300 " + color + " " + darkColor

---

<div class={coloredStyle}>
    <slot/>
</div>